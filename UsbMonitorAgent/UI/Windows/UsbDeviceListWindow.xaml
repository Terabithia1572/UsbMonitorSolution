<Window x:Class="UsbMonitorAgent.UI.Windows.UsbDeviceListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Takılı USB Aygıtları"
        Width="653"
        Height="441"
        WindowStartupLocation="CenterScreen"
        Background="#f3f3f3"
        WindowStyle="None">

    <Border Margin="10" Background="White" CornerRadius="12" Padding="20" BorderBrush="#ccc" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="55"/>
            </Grid.RowDefinitions>

            <!-- Başlık -->
            <TextBlock Text="Takılı USB Aygıtları"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"/>

            <!-- Liste -->
            <DataGrid x:Name="UsbGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      MouseDoubleClick="UsbGrid_MouseDoubleClick"
                      Background="White">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Sürücü" Binding="{Binding DriveRoot}" Width="90"/>
                    <DataGridTextColumn Header="Etiket" Binding="{Binding Label}" Width="150"/>
                    <DataGridTextColumn Header="Kimlik" Binding="{Binding Identity}" Width="240"/>
                </DataGrid.Columns>

            </DataGrid>

            <!-- Kapat Butonu -->
            <Button Grid.Row="2"
                    Content="Kapat"
                    Width="120"
                    Height="40"
                    HorizontalAlignment="Center"
                    Background="#d9534f"
                    Foreground="White"
                    Click="Close_Click">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="#c94440"
                                BorderThickness="1"
                                Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>

        </Grid>
    </Border>

</Window>
