<Window x:Class="UsbMonitorAgent.UsbInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="USB Bilgisi"
        Width="728"
        Height="562"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f3f3f3"
        WindowStyle="None">

    <Border Margin="10"
            Background="White"
            CornerRadius="12"
            Padding="20"
            BorderBrush="#ccc"
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Üst Başlık + Çıkış -->
            <Grid>
                <TextBlock Text="USB Aygıt Bilgileri"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#333"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <!-- Sağ üst kapanma butonu -->
                <Button Content="✕"
                        Width="28"
                        Height="28"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#444"
                        FontSize="16"
                        Cursor="Hand"
                        Click="Close_Click"/>
            </Grid>

            <!-- İçerik -->
            <StackPanel Grid.Row="1"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Width="420">

                <TextBlock Text="Sürücü:" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding DriveLetter}" FontSize="16" Margin="0,0,0,10"/>

                <TextBlock Text="Etiket (Volume Label):" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding VolumeLabel}" FontSize="16" Margin="0,0,0,10"/>

                <TextBlock Text="Dosya Sistemi:" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding FileSystem}" FontSize="16" Margin="0,0,0,10"/>

                <TextBlock Text="Boyut:" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding SizeInfo}" FontSize="16" Margin="0,0,0,10"/>

                <TextBlock Text="VID/PID:" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding VidPid}" FontSize="16" Margin="0,0,0,10"/>

                <TextBlock Text="Seri Numarası (SN):" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding SerialNumber}" FontSize="16" Margin="0,0,0,10"/>

                <TextBlock Text="Volume GUID:" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding VolumeGuid}"
                           TextWrapping="Wrap"
                           FontSize="14"
                           Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Alt Kapat Butonu -->
            <Button Grid.Row="2"
                    Width="120"
                    Height="38"
                    HorizontalAlignment="Center"
                    Content="Kapat"
                    Foreground="White"
                    Cursor="Hand" Click="Button_Click">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8"
                                Background="#d9534f">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>
        </Grid>
    </Border>
</Window>
