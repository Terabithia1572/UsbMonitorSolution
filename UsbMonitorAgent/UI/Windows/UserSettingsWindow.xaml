<Window x:Class="UsbMonitorAgent.UI.Windows.UserSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ayarlar" Height="520" Width="380"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="20" Background="#FDFDFD" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="✕" HorizontalAlignment="Right" Margin="0,15,15,0"
                    Click="Close_Click" Cursor="Hand"
                    Background="Transparent" BorderThickness="0" 
                    Foreground="#888" FontWeight="Bold" FontSize="16"/>

            <TextBlock Text="Hesap Ayarları" Grid.Row="0" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" Margin="0,20,0,10"
                       FontSize="18" FontWeight="Bold" Foreground="#333"/>

            <StackPanel Grid.Row="1" Margin="30,10,30,30" VerticalAlignment="Top">

                <TextBlock Text="Yeni Kullanıcı Adı" Foreground="#666" FontWeight="SemiBold" Margin="2,0,0,5"/>
                <Border CornerRadius="6" BorderThickness="1" BorderBrush="#DDD" Background="#FFF" Height="35" Margin="0,0,0,15">
                    <TextBox x:Name="UsernameBox" BorderThickness="0" Background="Transparent"
                             VerticalContentAlignment="Center" Padding="10,0"/>
                </Border>

                <TextBlock Text="Mevcut Şifre" Foreground="#666" FontWeight="SemiBold" Margin="2,0,0,5"/>
                <Border CornerRadius="6" BorderThickness="1" BorderBrush="#DDD" Background="#FFF" Height="35" Margin="0,0,0,15">
                    <PasswordBox x:Name="OldPassBox" BorderThickness="0" Background="Transparent"
                                 VerticalContentAlignment="Center" Padding="10,0"/>
                </Border>

                <TextBlock Text="Yeni Şifre" Foreground="#666" FontWeight="SemiBold" Margin="2,0,0,5"/>
                <Border CornerRadius="6" BorderThickness="1" BorderBrush="#DDD" Background="#FFF" Height="35" Margin="0,0,0,15">
                    <PasswordBox x:Name="NewPassBox" BorderThickness="0" Background="Transparent"
                                 VerticalContentAlignment="Center" Padding="10,0"/>
                </Border>

                <TextBlock Text="Yeni Şifre (Tekrar)" Foreground="#666" FontWeight="SemiBold" Margin="2,0,0,5"/>
                <Border CornerRadius="6" BorderThickness="1" BorderBrush="#DDD" Background="#FFF" Height="35" Margin="0,0,0,25">
                    <PasswordBox x:Name="NewPassBox2" BorderThickness="0" Background="Transparent"
                                 VerticalContentAlignment="Center" Padding="10,0"/>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">

                    <Button Content="KAYDET" Width="120" Height="40"
                            Click="Save_Click" IsDefault="True"
                            Background="#007ACC" Foreground="White" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand" Margin="0,0,10,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="İPTAL" Width="120" Height="40"
                            Click="Close_Click" IsCancel="True"
                            Background="#EEE" Foreground="#555" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>