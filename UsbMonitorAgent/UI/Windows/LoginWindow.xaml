<Window x:Class="UsbMonitorAgent.UI.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giriş Yap" Height="450" Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="20" Background="#FDFDFD" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="✕" HorizontalAlignment="Right" Margin="0,15,15,0"
                    Click="Close_Click" Cursor="Hand"
                    Background="Transparent" BorderThickness="0" 
                    Foreground="#888" FontWeight="Bold" FontSize="16"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="40,0,40,40">

                <TextBlock Text="USB Monitor" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="#333" Margin="0,0,0,5"/>
                <TextBlock Text="Yönetici Girişi" FontSize="14" 
                           HorizontalAlignment="Center" Foreground="#777" Margin="0,0,0,30"/>

                <TextBlock Text="Kullanıcı Adı" Foreground="#555" FontWeight="SemiBold" Margin="5,0,0,5"/>
                <Border CornerRadius="8" BorderThickness="1" BorderBrush="#DDD" Background="#FFF" Height="40" Margin="0,0,0,15">
                    <TextBox x:Name="UsernameBox" BorderThickness="0" Background="Transparent"
                             VerticalContentAlignment="Center" Padding="10,0" FontSize="14"/>
                </Border>

                <TextBlock Text="Şifre" Foreground="#555" FontWeight="SemiBold" Margin="5,0,0,5"/>
                <Border CornerRadius="8" BorderThickness="1" BorderBrush="#DDD" Background="#FFF" Height="40" Margin="0,0,0,25">
                    <PasswordBox x:Name="PasswordBox" BorderThickness="0" Background="Transparent"
                                 VerticalContentAlignment="Center" Padding="10,0" FontSize="14"/>
                </Border>

                <Button Content="GİRİŞ YAP" Height="45"
                        Click="Login_Click" IsDefault="True"
                        Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="14"
                        BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBlock x:Name="ErrorText" Text="" Foreground="Red" 
                           HorizontalAlignment="Center" Margin="0,15,0,0" 
                           TextWrapping="Wrap" TextAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>